<Window x:Class="Monopoly.IHM.SelectF1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly.IHM"
        mc:Ignorable="d"
        Title="SelectF1" Height="450" Width="800" Background="#15161C">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <!--IHM Selection de la f1-->

        <Label Content="Joueur 1 sélectionnez votre F1"
       Grid.Column="0" Grid.ColumnSpan="7"
       Grid.Row="0"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       HorizontalContentAlignment="Center"
       FontSize="25"
       FontWeight="Bold"
       Foreground="White"/>
        
        <Button x:Name="Alfa_romeo" Tag="Alfa_Romeo" Grid.Column="1" Grid.Row="1" Background="#15161C" Click="Play">
            <Image  Source="Image/Monoplaces/Alfa_Romeo.png"  Width="80"/>
        </Button>

        <Button x:Name="Aston_martin" Tag="Aston_Martin" Grid.Column="2" Grid.Row="1" Background="#15161C"  Click="Play">
            <Image  Source="Image/Monoplaces/Aston_Martin.png"/>
        </Button>

        <Button x:Name="Ferrari" Tag="Ferrari" Grid.Column="3" Grid.Row="1" Background="#15161C"  Click="Play">
            <Image Source="Image/Monoplaces/Ferrari.png" />
        </Button>
        
        <Button x:Name="Alpine" Tag="Alpine" Grid.Column="4" Grid.Row="1" Background="#15161C"  Click="Play">
            <Image Source="Image/Monoplaces/Alpine.png" Width="90"/>
        </Button>

        <Button x:Name="Mclaren" Tag="Mclaren" Grid.Column="5" Grid.Row="1" Background="#15161C"  Click="Play">
            <Image Source="Image/Monoplaces/Mclaren.png"/>
        </Button>

        <Button x:Name="Mercedes" Tag="Mercedes" Grid.Column="1" Grid.Row="2" Background="#15161C"  Click="Play">
            <Image Source="Image/Monoplaces/Mercedes.png" />
        </Button>

        <Button x:Name="Redbull" Tag="RedBull" Grid.Column="2" Grid.Row="2" Background="#15161C"  Click="Play">
            <Image Source="Image/Monoplaces/RedBull.png" Width="90"/>
        </Button>

    </Grid>
</Window>
